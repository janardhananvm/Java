
import java.io.*;
class HelloWorld 
{
    public static void main(String[] args) 
    {
		int number = 2 ; 
		
		int Ans = number << 2;
		
		byte ansByte = (byte) Ans;
		
		System.out.println(Ans+"\n");
		
		System.out.println(ansByte+"\n");
		
		System.out.println(number >> 2);
		
		System.out.println( "1. " + (Ans >> 2));
		
		System.out.println( "2. " + (Ans << 2));
		
		System.out.println( "3. " + (Ans << 2));
	}
}

