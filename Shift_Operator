
import java.io.*;
class HelloWorld 
{
    public static void main(String[] args) 
    {
		int number = 2 ; 
		
		int Ans = number << 2;
		
		byte ansByte = (byte) Ans;
		
		System.out.println("1. " + (Ans));
		
		System.out.println("2. " + (ansByte));
		
		System.out.println("3. " + (number >> 2));
		
		System.out.println( "4. " + (Ans >> 2));
		
		System.out.println( "5. " + (Ans << 2));
		
		System.out.println( "6. " + (Ans << 2));
	}
}

